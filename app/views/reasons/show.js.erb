<% if @reason %>
  $('.blurry').show();
  $('#show_reason_extended').fadeIn().html("<%= escape_javascript(render(:partial => 'reason_extended', locals: { reason: @reason }, :formats => [:html] )) %>");
  $('.show_extended').offset({top: $('body').scrollTop()+50 } );  
  console.log($('body').scrollTop());
  if($('.reason_description_textarea .best_in_place').html() == '') {
    $('.reason_description_textarea .best_in_place').html('<%= t("reason.no_description_yet") %>');
  }
  rebindAll(null);
  $('.tipsit').tipsy({fade: true, gravity: 's'});
  $('.tipsit-n').tipsy({fade: true, gravity: 'n'});
<% else %>
  $('#show_reason_extended').append("<%= escape_javascript('errrrrroor') %>");
<% end %>


