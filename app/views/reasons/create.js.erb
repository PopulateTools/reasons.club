<% if @result %>
  <% 
  if @reason.for == true
    destination = 'for'
  else
    destination = 'against'
  end
  %>
  $('.new_reason_here_<%= destination %>').append("<%= escape_javascript(render(:partial => @reason, :formats => [:html] )) %>");
  $('.reason_title_<%= destination %>').val('');
<% else %>
  $('#add_reason_against').html("<%= escape_javascript('errrrrroor') %>");
<% end %>


