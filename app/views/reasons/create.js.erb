<% if @result %>
  <% destination = (@reason.for == true) ? :for : :against %>
  $('.new_reason_here_<%= destination %>').append("<%= escape_javascript(render(:partial => @reason, :formats => [:html] )) %>");
  $('.new_reason_here_<%= destination %>').append('<%= escape_javascript(render(:partial => "reasons/after_reason_share", :formats => [:html] )) %>');
  $('.after_reason_share').delay(2500).fadeOut('slow');
  $('.reasons-<%= destination %> .reasons-counter').html('<%= j render_reasons_counter @issue, destination %>');
  $('.reason_title_<%= destination %>').val('');
<% else %>
  $('.new_reason_here_<%= destination %>').append("<%= escape_javascript('errrrrroor') %>");
<% end %>

